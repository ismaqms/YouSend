<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yousend">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.EditProfile" android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".views.addpost"
            android:label="@string/title_activity_addpost"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
             />
        <activity android:name=".views.AddfotoPerfil"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity android:name=".views.ProfileUserActivity" />
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.SearchActivity" />
        <activity android:name=".views.compartirFoto"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".views.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>